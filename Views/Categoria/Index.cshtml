@model IEnumerable<TiendaOrg.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Categorías</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Categoría</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCategoria)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.IdCategoria">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdCategoria">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdCategoria">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
